<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="inherited_product_template_form_view_multi_websites" model="ir.ui.view">
    <field name="name">ineherited.product.template.product.form.multi_websites</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_form_view"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='company_id']" position="after">
        <field name="website_ids" widget="many2many_tags" domain="company_id and [('company_id', '=', company_id)] or []"/>
      </xpath>
    </field>
  </record>
</odoo>
